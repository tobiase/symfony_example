{% extends 'base.html.twig' %}

{% block title %}Stoff index{% endblock %}

{% block body %}
    <h1>Stoff index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Beschreibung</th>
                <th>Preis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stoff in stoffs %}
            <tr>
                <td>{{ stoff.id }}</td>
                <td>{{ stoff.name }}</td>
                <td>{{ stoff.beschreibung }}</td>
                <td>{{ stoff.preis }}</td>
                <td>
                    <a href="{{ path('stoff_show', {'id': stoff.id}) }}">show</a>
                    <a href="{{ path('stoff_edit', {'id': stoff.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stoff_new') }}">Create new</a>
{% endblock %}